<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/loc_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/tagaytay" >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/frameLayout1"
        android:layout_below="@+id/loc_frameLayout"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="38dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_video"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button_music"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_style"
            android:onClick="viewVideoQR"
            android:text="@string/label_button_video"
            android:textAppearance="?android:attr/textAppearance" />

    </LinearLayout>
	<Button
        android:id="@+id/locationButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayoutButtons"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_style"
        android:minWidth="100dp"
        android:text="Partner Link"
        android:textSize="10sp" />

    <Button
        android:id="@+id/locationButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationButton02"
        android:layout_below="@+id/locationButton02"
        android:background="@drawable/button_style"
        android:minWidth="100dp"
        android:text="Partner Link"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/locationbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationButton01"
        android:layout_below="@+id/locationButton01"
        android:background="@drawable/button_style"
        android:minWidth="100dp"
        android:text="Partner Link"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/locationimageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationbutton1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/locationbutton1"
        android:layout_below="@+id/locationbutton1"
        android:adjustViewBounds="true"
        android:src="@drawable/morefun_logo" />
    
</RelativeLayout>