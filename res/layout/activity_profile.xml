<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    <RelativeLayout
        android:id="@+id/relativeLayoutTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="42dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/pf_profilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/profile_pic" />

            <TextView
                android:id="@+id/label_pfusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="User Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/brown_dark"
                android:typeface="sans" />

            <TextView
                android:id="@+id/label_pfpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/brown_dark"
                android:typeface="sans" />

            <TextView
                android:id="@+id/label_pftrophies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Trophies"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/brown_dark"
                android:typeface="sans" />
        </LinearLayout>
        
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutTrans2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayoutTrans"
            android:layout_alignTop="@+id/relativeLayoutTrans"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/relativeLayoutTrans" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/pf_changePic"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@layout/buttonpfchangepic" />

                <EditText
                    android:id="@+id/pf_username"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/profileinput_box"
                    android:clickable="false"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="none"
                    android:text="user"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/brown_dark"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/pf_password"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/profileinput_box"
                    android:clickable="false"
                    android:editable="false"
                    android:inputType="none"
                    android:password="true"
                    android:text="usertest"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/brown_dark"
                    android:typeface="sans" />

                <Spinner
                    android:id="@+id/pf_trophies"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/profileinput_box"
                    android:spinnerMode="dropdown"
                    android:textSize="12sp"
                    android:typeface="sans" />

            </LinearLayout>

        </RelativeLayout>



</RelativeLayout>
